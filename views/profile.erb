<div>
  <h2><%== @username %></h2>
  <% if @is_current_user_profile %>
    <div>
      <form action="/user/edit" method="get">
        <button type="submit">Edit Profile</button>
      </form>

      <form action="/signout" method="post">
        <button type="submit">Sign Out</button>
      </form>
    </div>
  <% end %>
</div>

<div class="feed">
  <article class="post new_post">
    <p><b>+</b></p>
    <a href="/kindness/new">
      <span></span>
    </a>
  </article>

  <% @posts.each_pair do |id, post| %>

    <article class="post">
      <div class="post content">
        <p><%== post['description'] %></p>
      </div>

      <div class="post metadata">
        <p>Kindness by <%== post['posted_by'] %></p>
        <p>
          <% if user_likes?(post) %>
            <img src="/icons/like-on.png" width="12" height="12"> <%== post['liked_by'] ? post['liked_by'].count : 0 %>
          <% else %>
            <img src="/icons/like-off.png" width="12" height="12"> <%== post['liked_by'] ? post['liked_by'].count : 0 %>
          <% end %>
          <img src="/icons/comments.png" width="12" height="12"> <%== post['comments'] ? post['comments'].count : 0 %>
        </p>

        <a href="/kindness/<%== id %>">
          <span></span>
        </a>
      </div>
    </article>

  <% end %>

</div>
