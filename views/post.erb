<div class="current post">
  <article class="current post">
    <div class="content">
      <p><%== @post['description'] %></p>
    </div>

    <div class="metadata">
      <p class="likes">
        Kindness by <%== @post['posted_by'] %>
      </p>

      <div>
        <% if @user %>

          <form action="/kindness/<%== @post['post_id'] %>/like" method="post" class="likes">
            <% if user_likes?(@post) %>
              <input type="image" src="/icons/like-on.png" width="12" height="12" class="likes">
            <% else %>
              <input type="image" src="/icons/like-off.png" width="12" height="12" class="likes">
            <% end %>
          </form>

        <% else %>

          <% if user_likes?(@post) %>
            <img src="/icons/like-on.png" width="12" height="12" class="likes">
          <% else %>
            <img src="/icons/like-off.png" width="12" height="12" class="likes">
          <% end %>

        <% end %>

          <p class="likes">
            <%== format_likes_from(@post['liked_by'], @user) %>
          </p>
      </div>

      <div>
        <img src="/icons/comments.png" width="12" height="12" class="likes">
        <p class="likes">
          <%== @post['comment'] ? @post['comment'].count : 0 %>
        </p>
      </div>
    </div>
  </article>
</div>

<% if @user_created_post %>
  <div>
    <form action="/kindness/<%== @post['post_id'] %>/delete" method="post">
      <button type="submit">Delete Kindness</button>
    </form>
  </div>
<% end %>
